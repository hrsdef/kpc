import {getRestProps} from '../utils';
import {makeFormStyles} from './styles';

const {children, className, layout, size} = this.get();

const classNameObj = {
    [`${k}-form`]: true,
    [className]: className,
    [`k-${layout}`]: layout,
    [`k-${size}`]: size !== 'default',
    [makeFormStyles()]: true,
};

<form {...getRestProps(this)}
    class={classNameObj}
    ev-submit={this.onSubmit}
    noValidate
>{children}</form>
