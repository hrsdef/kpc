import { Icon } from '../icon';
import { getRestProps } from '../utils';
import { Wrapper } from '../wrapper';

const { children, className } = this.get();

const classNameObj = {
    [`k-copy`]: true,
    [className]: className,
}

<Wrapper ev-click={this.copy} class={classNameObj} {...getRestProps(this)}>
    <template v-if={children}>{children}</template>
    <Icon v-else class="k-icon-clone" hoverable />
</Wrapper>
